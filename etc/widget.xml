<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="shippingcalculator" class="Lof\ShippingCalculator\Block\Widget\ShippingCalculator">
        <label translate="true">Shipping Calculator</label>
        <description>Shipping Calculator</description>
        <parameters>
            <parameter name="title_shipping" xsi:type="text"  visible="true" sort_order="10" >
                <label translate="true">Shipping Calculator Title</label>
            </parameter>
            <parameter name="description_shipping" xsi:type="text"  visible="true" sort_order="20" >
                <label translate="true">Shipping Calculator Description</label>
            </parameter>
            <parameter name="button_title" xsi:type="text"  visible="true" sort_order="30" >
                <label translate="true">Shipping Calculator Button Title</label>
            </parameter>
            <parameter name="default_state_region" xsi:type="text"  visible="true" sort_order="40" >
                <label translate="true">Default State/Region</label>
            </parameter>
            <parameter name="default_zip_postcode" xsi:type="text"  visible="true" sort_order="50" >
                <label translate="true">Default Zip/Postcode</label>
            </parameter>
            <parameter name="default_country" xsi:type="select" source_model="Magento\Directory\Model\Config\Source\Country" visible="true" sort_order="60" >
                <label translate="true">Default Country</label>
            </parameter>
            <parameter name="country_enable" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" sort_order="70" >
                <label translate="true">Display Country Selector</label>
            </parameter>
            <parameter name="state_region_enable" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" sort_order="80" >
                <label translate="true">Display State/Region Selector</label>
            </parameter>
            <parameter name="zipcode_enable" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno" visible="true" sort_order="90" >
                <label translate="true">Calculate by Zip Code</label>
            </parameter>
        </parameters>
    </widget>
</widgets>